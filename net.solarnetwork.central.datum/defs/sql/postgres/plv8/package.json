{
  "name": "solarnet-plv8",
  "description": "SolarNet JavaScript functions for plv8",
  "version": "0.1.0",
  "keywords": [
    "solarnetwork",
    "solarnet"
  ],
  "author": "Matt Magoffin <matt@solarnetwork.net>",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild:dev": "rm -rf tmp && mkdir tmp;",
    "build:global": "./node_modules/rollup/bin/rollup src/global.js --config rollup.config.global.js --output dist/${npm_package_name}-global.sql",
    "test": "ava"
  },
  "ava": {
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "@ava/stage-4"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-preset-es2015": "^6.22.0",
    "csv": "^1.1.1",
    "moment": "^2.17.1",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-json": "^2.1.0",
    "sinon": "^1.17.7",
    "smash": "^0.0.15",
    "uglify-js": "^2.x"
  }
}
